{
    "require": {
        "symfony/console": "^3.3",
        "ext-pdo": "*"
    },
    "require-dev": {
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "ext-pdo_sqlite": "*",
        "phpunit/phpunit": "~7.5",
        "bamarni/composer-bin-plugin": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Console\\": "src"
        },
        "classmap": ["src"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "suggest": {
        "ext-pdo_mysql": "Support of MySQL requires pdo_mysql extension",
        "ext-pdo_pgsql": "Support of Postgres requires pdo_postgres extension",
        "ext-pdo_sqlite": "Support of SQLite requires pdo_sqlite extension"
    }
}
